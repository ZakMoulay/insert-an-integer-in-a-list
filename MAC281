#include <iostream>
#include <algorithm>
using namespace std;

void sortArr(int[],int);
void insert(int[],int,int);
int main() {
    int num,arrSize;
    cout << "What is your array size? "<<endl;
    cin >> num;
    int arr[num];
    arrSize = sizeof(arr)/sizeof(arr[0]);
    
    for (int i = 0; i < arrSize; i++){
        cout << "Enter a number :";
         cin >> num;
         arr[i] = num;
    }
    sortArr(arr, arrSize);
    cout << " The first array is :"<<endl;
   for (int p : arr)
            cout<< p <<" ";
            cout<< "\n";
    int newArrSize = arrSize + 1;     // new array size 
    int newArr[newArrSize];           // initializing new array
    int insertNum;
    cout << "What number would you like to add ?";
    cin >> insertNum;
    insert(newArr,newArrSize,insertNum);
    for (int p : newArr)
        cout << p << " ";
    cout<<"\n";
    
}
    // sorting array
    void sortArr(int a[],int n)
    {
        for(int i = 0;i < n;i++)
            {
                for (int j = i+1;j < n;j++)
                {
                   if (a[j] < a[i])
                       swap(a[i], a[j]);
                }
            }
     }
     // insert function     a = [1,2,4,5,X]
         void insert(int newArr1[],int newArrSize,int addNum)
    {
        int n = newArrSize - 1;                       // n = 4        
        int i = 0;
        while ( addNum > newArr1[i])
            i = i + 1;                               // i = 2
        
              for (int j = 0; j < n-i;j++){          // j= 0 to j = 2
                newArr1[n-j] = newArr1[n-j-1];                  // newArr1[4] = newArr1[3] && newArr1[3] = newArray[2] 
        }
        
        newArr1[i] = addNum;
    }
    
    
