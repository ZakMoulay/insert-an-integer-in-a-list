#include <iostream>
#include <algorithm>
using namespace std;

void sortArr(int[],int);
void insert(int[],int,int);
int main() {
    int num,arrSize;
    cout << "What is your array size? "<<endl;
    cin >> num;
    int arr[num];
    arrSize = sizeof(arr)/sizeof(arr[0]);
    
    for (int i = 0; i < arrSize; i++){
        cout << "Enter a number :";
         cin >> num;
         arr[i] = num;
    }
    sortArr(arr, arrSize);
    cout << " The first array is :"<<endl;
   for (int p : arr)
            cout<< p <<" ";
            cout<< "\n";
    int newArrSize = arrSize+1;
    int newArr[newArrSize];
    int insertNum;
    cout << "What number would you like to add ?";
    cin >> insertNum;
    insert(newArr,newArrSize,insertNum);
    for (int p : newArr)
        cout << p << " ";
    cout<<"\n";
    
}

    void sortArr(int a[],int n)
    {
        for(int i = 0;i < n;i++)
            {
                for (int j = i+1;j < n;j++)
                {
                   if (a[j] < a[i])
                       swap(a[i], a[j]);
                }
            }
     }
     // insert function
   void insert(int newArr1[],int newArrSize,int addNum)
    {
        int i = 0,j;
        while ( addNum > newArr1[i])
            i = i + 1;
        newArr1[i] = addNum;
        for ( j = 0; j < newArrSize-i;j++){
         newArr1[newArrSize-j+1] = newArr1[newArrSize-j];
        }
        
        
    }
    
